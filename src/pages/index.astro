---
const title = "KoLLOID";
const subtitle = "とけない個のための表現空間";
const explanation = `この空間には彩り豊かな表現がふわふわと浮遊しています。
					 好きな色の粒子をご覧ください。`;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- p5.js 本体をCDNから読み込み -->
    <script src="https://cdn.jsdelivr.net/npm/p5@1.9.0/lib/p5.min.js"></script>
    <style>
      /* タイトル部分の見た目とアニメーション */
      .site-title-link {
        text-decoration: none;
        color: #222;          /* 通常の文字色 */
      }

      .site-title {
        display: inline-block;
        margin: 0 0 0.5rem;
        font-size: 2.5rem;
        letter-spacing: 0.15em;
        transition:
          color 0.2s ease,
          transform 0.2s ease,
          opacity 0.2s ease;
      }

      /* ホバーしたとき：色を少し薄く＋ふわっと */
      .site-title-link:hover .site-title {
        color: #777;          /* 少し薄い色に */
        opacity: 0.85;        /* ほんのり透ける感じ */
        transform: translateY(-2px);
      }
    </style>
  </head>

  <body
    style="
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background: #f7f5f2;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    "
  >
    <!-- 背景のキャンバスを入れるコンテナ -->
    <div
      id="canvas-container"
      style="
        position: fixed;
        inset: 0;
        z-index: -1;
      "
    ></div>

    <main style="text-align: center;">
      <!-- ここをリンクに変更 -->
      <a href="/" class="site-title-link">
        <h1 class="site-title">
          {title}
        </h1>
      </a>

      <p style="margin: 0; font-size: 1rem; color: #555;">
        {subtitle}
      </p>

      <p style="white-space: pre-line; margin-top: 2rem; font-size: 0.9rem; color: #333;">
        {explanation}
      </p>

    </main>
	<script type="module" is:inline>
	import { createKolloidSketch } from "/public/js/kolloid-particles.js";

	window.addEventListener("DOMContentLoaded", () => {
		const sketch = createKolloidSketch();
		new p5(sketch);
	});
	</script>
  </body>
</html>
